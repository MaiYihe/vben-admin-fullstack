<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vbenadmin.backend.rbac.mapper.ResourceMapper">

    <select id="selectResourceIdsByRoleIds" resultType="java.lang.String"> SELECT DISTINCT
        resource_id FROM sys_role_resource WHERE role_id IN <foreach collection="roleIds" item="id"
            open="(" separator="," close=")"> #{id} </foreach>
    </select>

    <select id="selectAccessCodesByResourceIds" resultType="java.lang.String"> SELECT DISTINCT
        access_code FROM sys_resource WHERE id IN <foreach collection="resourceIds" item="id"
            open="(" separator="," close=")"> #{id} </foreach>
    </select>

</mapper>
