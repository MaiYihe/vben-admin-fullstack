<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vbenadmin.backend.rbac.mapper.RoleMapper">
    <select id="selectRolePermissionsByRoleIds" resultType="com.vbenadmin.backend.rbac.models.dto.RolePermissionDTO">
        SELECT DISTINCT 
            rr.role_id AS roleId,
            re.auth_code AS permission
        FROM sys_resource re 
        JOIN sys_role_resource rr ON re.id = rr.resource_id 
        WHERE rr.role_id IN 
        <foreach collection="roleIds"
            item = "roleId"
            open="(" separator="," close=")">
            #{roleId}
        </foreach>
        AND re.auth_code IS NOT NULL
    </select>
</mapper>
